<Window x:Class="BatchStockUpdater.UI.OverwriteQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchStockUpdater.UI"
        mc:Ignorable="d"
        Title="Overwrite" Height="200" Width="360">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Label x:Name="label" Content="The original CSV file is about to be overridden. &#10;Would you like to continue?" HorizontalAlignment="Left" Margin="18,26,0,0" VerticalAlignment="Top" Height="50" Width="317" FontSize="15"/>
        <Button x:Name="YesButton" Content="Yes" HorizontalAlignment="Left" Margin="76,103,0,0" VerticalAlignment="Top" Width="75" Click="YesButton_Click"/>
        <Button x:Name="NoButton" Content="No" HorizontalAlignment="Right" Margin="0,103,76,0" VerticalAlignment="Top" Width="75" Click="NoButton_Click"/>
    </Grid>
</Window>
